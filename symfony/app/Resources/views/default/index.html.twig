{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class=page-header>Contact Form</h2>
                {% for label, message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-info">Submit</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
